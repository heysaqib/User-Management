<!-- adminDashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/style.css">
  
</head>
<body>
  <h1>Admin Dashboard</h1>
  <button class="logout" onclick="window.location.href='admin/logout'">Logout</button>
  <h3 class="pro">Admin: <%= admin %></h3>
  <div>
    <label for="searchInput">Search Users:</label>
    <input type="text" id="searchInput" placeholder="Enter name or email">
    <button class="search-btn" id="searchButton" onclick="searchUsers()">Search</button>
  </div>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td>
            <button onclick="editUser('<%= user._id %>')">Edit</button>
            <button onclick="deleteUser('<%= user._id %>')">Delete</button>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <button onclick="createUser()">Create</button>

  <script src="/script.js"></script>
</body>
</html>